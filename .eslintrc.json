{
   "extends": [
      "next/core-web-vitals",
      "next/typescript",
      "plugin:prettier/recommended"
   ],
   "rules": {
      "prettier/prettier": [
         "error",
         {
            "printWidth": 80,
            "tabWidth": 2,
            "useTabs": false,
            "semi": true,
            "singleQuote": true,
            "trailingComma": "all",
            "arrowParens": "avoid",
            "endOfLine": "auto"
         }
      ]
   }
}